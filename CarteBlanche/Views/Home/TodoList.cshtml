<!DOCTYPE html>
<html lang="en">
<head>
  <title>Todo List</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>


<div class="container">
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <h2>TODO LIST</h2>
      <p>Tasks you have to do!</p>  
    </div>
    
     
     <button type="submit" class="btn btn-danger navbar-btn" >
         <a style="color:white" href="/Home/Logout">Sign Out</a>
     
     </button>
  </div>
</nav>
  

  <table class="table table-striped">
    <thead>
      <tr>
        
        <th>Title</th>
        <th>Labels</th>
        <th>Priority</th>
        <th>Edit</th>
        <th>Remove</th>
        
      </tr>
    </thead>
    <tbody>
      @{
          foreach (var item in Model)
          {
              <tr> 
                  
                  <td>@item.Title</td>
                  <td>@item.Label</td>
                  <td>@item.Priority</td>
                  <td><a href="/Home/edit?id=@item.Tid">Edit</a></td>
                  <td><a href="/Home/Delete?id=@item.Tid">Delete</a></td>
                 
              
              
              
              </tr>
          }
      }
    </tbody>
  </table>
</div>



@*!--form--!*@
<div class="container" style="margin:50px">
    <h2>Create New Task</h2>

    <form action="/Home/TodoList" method="post" class="needs-validation" novalidate>

       
        
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" placeholder="Enter title" name="Title" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field/Invalid.</div>
        </div>


        <div class="form-group">
            <label for="label">Label(s):</label>
            <input type="text" class="form-control" id="label" placeholder="Enter label" name="Label" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field/Invalid.</div>
        </div>

        <div class="form-group">
            <label for="priority">Priority:</label>
            <input type="text" class="form-control" id="priority" placeholder="Low,Medium,High" name="Priority" required>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field/Invalid.</div>
        </div>

       
        <button type="submit" style="align-self:center" class="btn btn-danger">ADD!!</button>
    </form>
</div>


<div class="jumbotron" style="background-color:brown; color:whitesmoke; margin:50px">

        <h3 style="text-align:center">Want to get hold of us?</h3>

        <p style="text-align:center">Contact us at info@carteblanche.tech / (+92) 316 0416819)  </p>

        <p style="text-align:center"> Copyrights 2022</p>

    </div>

<script>
    // Disable form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Get the forms we want to add validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

    
}  
</script>






</body>
</html>
